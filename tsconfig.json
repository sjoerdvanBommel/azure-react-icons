{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom",
      "@testing-library/react"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
} 